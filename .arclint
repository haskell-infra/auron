{
  "exclude": "(^etc/nixpkgs)",
  "linters": {
    "filename": {
      "type": "filename",
      "exclude": [ "(^.gitmodules)" ]
    },
    "generated": {
      "type": "generated"
    },
    "merge-conflict": {
      "type": "merge-conflict"
    },
    "nolint": {
      "type": "nolint"
    },
    "text": {
      "type": "text",
      "exclude": [ "(^src/res/users.nix)"
                 , "(^src/hosts/nginx.nix)"
                 , "(^src/hosts/rinoa.nix)"
                 , "(^VERSION)"
                 , "(^.gitmodules)"
                 ]
    },
    "spelling": {
      "type": "spelling"
    },
    "chmod": {
      "type": "chmod"
    },
    "pep8": {
      "type": "pep8",
      "include": [ "(\\.py$)" ]
    },
    "pyflakes": {
      "type": "pyflakes",
      "include": [ "(\\.py$)" ]
    }
  }
}
